<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/fragment_main">
    <fragment
        android:id="@+id/fragment_main"
        android:name="com.anvipus.explore.ui.xml.MainFragment"
        android:label=""
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_to_detail"
            app:destination="@id/fragment_user_detail"
            app:popUpTo="@id/fragment_main"/>
    </fragment>
    <fragment
        android:id="@+id/fragment_user_detail"
        android:name="com.anvipus.explore.ui.xml.UserDetailFragment"
        android:label=""
        tools:layout="@layout/user_detail_fragment">
        <argument
            android:name="data"
            app:argType="com.anvipus.core.models.UserDetail"/>
    </fragment>
</navigation>